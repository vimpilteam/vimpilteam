 <!-- Portfolio Modals -->
 {% for post in site.posts %}
    <div class="portfolio-modal modal fade" id="portfolioModal-{{ post.modal-id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="modal-body">
                            <h2>{{ post.title }}</h2>
                            <hr class="star-primary">
                            <img src="img/portfolio/{{ post.img }}" class="img-responsive img-centered" alt="{{ post.alt }}">
                            {% if post.description %}
                                <!--<p>-->
								{{ post.description }}
								<!--</p>-->
								<ul style="text-align:left">
									{% if post.list1 %}
									<li>										{{ post.list1 }}
									</li>
									{% endif %}
									{% if post.list2 %}
									<li>
										{{ post.list2 }}
									
									</li>
									{% endif %}
									{% if post.list3 %}
									<li>
									{{ post.list3 }}
									</li>
									{% endif %}
									{% if post.list4 %}
									<li>
									
										{{ post.list4 }}
									
									</li>
									{% endif %}
									{% if post.list5 %}
									<li>
									
										{{ post.list5 }}
									
									</li>
									{% endif %}
									{% if post.list6 %}
									<li>
									
										{{ post.list6 }}
									
									</li>
									{% endif %}
									{% if post.list7 %}
									<li>
									
										{{ post.list7 }}
									
									</li>
									{% endif %}
									{% if post.list8 %}
									<li>
									
										{{ post.list8 }}
									
									</li>
									{% endif %}
									{% if post.list9 %}
									<li>
									
										{{ post.list9 }}
									
									</li>
									{% endif %}
									{% if post.list10 %}
									<li>
									
										{{ post.list10 }}
									
									</li>
									{% endif %}
									{% if post.list11 %}
									<li>
									
										{{ post.list11 }}
									
									</li>
									{% endif %}
								</ul>
                            {% endif %}
							{% if post.linkA %}
							<a href="{{ post.linkA }}">href</a>
							{% endif %}
                            <ul class="list-inline item-details">
                                {% if post.clhttps://townstar.sandbox-games.com/files/assets/24720670/1/icon_remove.png?t=5045f6364491345f9af14137cca341ddient %}
                                    <li>Client:
                                        <strong><a href="http://startbootstrap.com">{{ post.client }}</a>
                                        </strong>
                                    </li>
                                {% endif %}
                                {% if post.project-date %}
                                    <li>Date:
                                        <strong><a href="http://startbootstrap.com">{{ post.project-date }}</a>
                                        </strong>
                                    </li>
                                {% endif %}
                                {% if post.category %}
                                    <li>Service:
                                        <strong><a href="http://startbootstrap.com">{{ post.category }}</a>
                                        </strong>
                                    </li>
                                {% endif %}
                            </ul>
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}